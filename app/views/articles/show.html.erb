<div class="container">
  <h1>
    <%= @article.title %>
    <small>
      <%= link_to edit_article_path, class: 'd-inline-block' do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to article_path(@article), class: 'd-inline-block', method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </small>
  </h1>
  <p><%= @article.content %></p>
</div>
